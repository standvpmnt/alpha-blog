<h1 align="center">Login</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
	<div class = "form-group row">
		<div class="col-sm-2">
			<%= f.label :email, class: "col-form-label"%><br/>
		</div>
		<div class="col-sm-10">
		<%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
		</div>
	</div>
	<div class = "form-group row">
		<div class="col-sm-2">
			<%= f.label :password, class: "col-form-label" %><br/>
		</div>
		<div class="col-sm-10">
			<%= f.password_field :password, class: "form-control", autocomplete: "off"%>
		</div>
	</div>
	<div class = "form-group row">
		<div class = "col-sm-12">
			<%= f.submit "Log in", class: "offset-sm-2 btn btn-primary btn-lg"%>
		</div>
	</div>
<% end %>

<div class="col-4 offset-4">
	[<%= link_to "Cancel request and return to articles listing", articles_path %>]
</div>
</div>
