<%= render 'shared/errors', obj: @article%>

<%= form_for @article do |f| %>
	<div class = "form-group row">
		<div class="col-sm-2">
			<%= f.label :title, class: "col-form-label"%><br/>
		</div>
		<div class="col-sm-10">
		<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
		</div>
	</div>
	<div class = "form-group row">
		<div class="col-sm-2">
			<%= f.label :description, class: "col-form-label" %><br/>
		</div>
		<div class="col-sm-10">
			<%= f.text_area :description, class: "form-control", placeholder: "Body of article", autofocus: true, rows: 10 %>
		</div>
	</div>
	<div class = "form-group row">
		<div class = "col-sm-8 offset-sm-2">
			<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
				<% cb.label(class: "checkbox-inline input_checkbox"){cb.check_box(class:"checkbox") + cb.text} %>
			<% end %>
		</div>
	</div>

	<div class = "form-group row">
		<div class = "col-sm-12">
			<%= f.submit class: "offset-sm-2 btn btn-primary btn-lg"%>
		</div>
	</div>
<% end %>

<div class="col-4 offset-4">
	[<%= link_to "Cancel request and return to articles listing", articles_path %>]
</div>
</div>
