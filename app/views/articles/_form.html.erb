<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
	<% @article.errors.full_messages.each do |msg| %>
	<li> <%= msg %> </li>
	<% end %>
</ul>
<% end %>

	<%= form_for(@article, :html => {role: "form"}) do |f| %>
		<div class = "form-group row">
			<%= f.label :title, class: "col-sm-2 col-form-label"%><br/>
			<div class="col-sm-8">
			<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
			</div>
		</div>
		<div class = "form-group row">
			<%= f.label :description, class: "col-sm-2 col-form-label" %><br/>
			<div class="col-sm-8">
				<%= f.text_area :description, class: "form-control", placeholder: "Body of article", autofocus: true, rows: 10 %>
			</div>
		</div>
		<div class = "form-group row">
			<div class = "col-sm-12">
				<%= f.submit class: "offset-sm-2 btn btn-primary btn-lg"%>
			</div>
		</div>
	<% end %>
	<div class="col-4 offset-4">
		[<%= link_to "Cancel request and return to articles listing", articles_path %>]
	</div>
</div>
