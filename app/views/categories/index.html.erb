<h1 align="center">Listing all the Categories</h1>
<%= will_paginate %>
<% @categories.each do |category| %>
	<ul class="listing">
		<div class="row">
			<div class="card col-md-4 offset-md-4">
				<li class="card-title center">
					<%= link_to "#{category.name}", category_path(category) %>
				</li>
				<li class="center"><small><%= pluralize(category.articles.count, "article") %> </small></li>
			</div>
		</div>
	</ul>
<% end %>
<%= will_paginate %>